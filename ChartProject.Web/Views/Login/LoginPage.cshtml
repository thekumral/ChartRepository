@{
    ViewBag.Title = "Veritabanına Bağlan";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="login-section">
    <div class="login-container">
        <h2>Veri Tabanına Bağlan</h2>
        <form method="post" action="/Login/SetConnectionInfo">
            <div class="form-group">
                <label for="serverName">Sunucu Adı</label>
                <input type="text" id="serverName" name="ServerName" required />
            </div>
            <div class="form-group">
                <label for="databaseName">Veritabanı Adı</label>
                <input type="text" id="databaseName" name="DatabaseName" required />
            </div>
            <div class="form-group">
                <label for="dataSource">Veri Kaynağı</label>
                <input type="text" id="dataSource" name="DataSource" required />
            </div>
            <button type="submit">Bağlan</button>
        </form>
    </div>
</section>
